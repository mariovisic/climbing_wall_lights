<h1 class="text-center mb-4 pb-4">Lights</h1>

<%= erb :_light_grid %>

<div class="row mt-5">
  <div class="col-12">
    <form method="post" action="/set-brightness" class="mb-4 form setBrightness">
      <div class="form-group">
        <label for="brightness">Brightness</label>
        <input type="range" name="brightness" min="0" max="<%= Wall::MAX_BRIGHTNESS %>" value="<%= Wall.brightness %>" class="form-control-range brightnessSlider">
      </div>
    </form>
  </div>
</div>

<div class="row mt-4 mb-4">
  <div class="col">
    <form method="post" class="form-single-button" action="/lights-off">
      <input type="submit" class="btn btn-danger" value="All Off">
    </form>

    <form method="post" class="form-single-button" action="/lights-on">
      <input type="submit" class="btn btn-primary" value="All On">
    </form>
  </div>
</div>
