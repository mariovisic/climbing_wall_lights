#!/usr/bin/env python3

import board
import neopixel
import os

LEDS = 180

pixels = neopixel.NeoPixel(board.D18, LEDS, brightness=1.0, auto_write=False, pixel_order=neopixel.RGB)

FINISH = (os.getenv('FINISH') or '').split(',')
START = (os.getenv('START') or '').split(',')
ON = (os.getenv('ON') or '').split(',')

for i in range(LEDS):
    if str(i) in FINISH:
        pixels[i] = (255, 0, 0)
    elif str(i) in START:
        pixels[i] = (0, 255, 0)
    elif str(i) in ON:
        pixels[i] = (0, 0, 255)
    else:
        pixels[i] = (0, 0, 0)

pixels.show()
